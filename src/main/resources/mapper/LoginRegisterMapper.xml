<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.aa.mapper.LoginRegisterMapper">

    <insert id="register">
        insert into admin values(#{id},#{name},#{password})
    </insert>

    <select id="login" resultType="cn.aa.pojo.Admin">
        select id,name,password from admin where name=#{name} and password=#{password}
    </select>

    <select id="check" resultType="int">
        select count(1) from admin where name=#{name}
    </select>

</mapper>